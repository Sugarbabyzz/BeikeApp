<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:TagsEditText="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="46dp">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        android:textSize="20dp" />

    <com.andreabaccega.widget.FormEditText
        whatever:testType="nocheck"
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        whatever:emptyErrorString="姓名不能为空"
        android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_name"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="46dp">
        <TextView
            android:text="性别"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/rg_teacher_gender"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:checked="true"
                android:id="@+id/rb_male"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/rb_female"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_gender"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="46dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学校"
            android:textSize="20dp" />
        <com.andreabaccega.widget.FormEditText
            whatever:testType="nocheck"
            android:id="@+id/et_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            whatever:emptyErrorString="学校名不能为空"
            android:ems="10" />

    </LinearLayout>




<LinearLayout
    android:id="@+id/ll_class"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/ll_school"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="46dp">
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="班级"
        android:textSize="20dp" />

    <mabbas007.tagsedittext.TagsEditText
        android:id="@+id/tagsEditText"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        TagsEditText:allowSpaceInTag="true"
        TagsEditText:tagsCloseImagePadding="@dimen/defaultTagsCloseImagePadding"
        TagsEditText:tagsCloseImageRight="@drawable/tag_close"
        TagsEditText:tagsTextColor="@color/colorAccent"
        TagsEditText:tagsTextSize="@dimen/defaultTagsTextSize" />
</LinearLayout>
    <Button
        android:id="@+id/button_addClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_class"
        android:layout_centerHorizontal="true"
        android:text="添加"
        android:textSize="20dp" />


    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/button_addClass"
        android:layout_marginTop="47dp"
        android:text="完成注册" />



</RelativeLayout>
