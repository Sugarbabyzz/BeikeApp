<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.beikeapp.LoginPage.RegisterGuideActivity">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="38dp"
        android:text="您的身份"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btn_asStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape"
        android:textColor="@color/btn_white_normal"
        android:textSize="20dp"
        android:text="学    生" />

    <Button
        android:id="@+id/btn_asTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_asStudent"
        android:layout_marginTop="2dp"
        android:background="@drawable/shape"
        android:textColor="@color/btn_white_normal"
        android:textSize="20dp"
        android:text="老    师" />

    <Button
        android:id="@+id/btn_asParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_asTeacher"
        android:layout_marginTop="2dp"
        android:background="@drawable/shape"
        android:textColor="@color/btn_white_normal"
        android:textSize="20dp"
        android:text="家    长" />
</RelativeLayout>
