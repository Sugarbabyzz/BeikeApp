<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.StudentMain.StudentMainFragment">

    <Button
        android:id="@+id/btn_do_homework"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="158dp"
        android:text="Do HomeWork"
        android:textAllCaps="false"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_search_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="150dp"
        android:layout_marginStart="70dp"
        android:text="搜题"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_do_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_search_exercise"
        android:layout_marginEnd="70dp"
        android:text="做题"
        android:textSize="25sp" />

</RelativeLayout>